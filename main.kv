<MainWindow>:
    GridLayout:
        cols: 1
        rows: 3
        size: root.width, root.height

        Button:
            id: exit
            text: "Exit"
            on_release:
                root.exit_request()
                root.start_connection()
            
        GridLayout:
            cols: 3
            rows: 1

            Button:
                id: water_all
                text: "Water All"
                on_release:
                    root.water_all_request()
                    root.start_connection()
            Button:
                id: water_need
                text: "Water Needed"
                on_release:
                    root.water_need_request()
                    root.start_connection()
            Button:
                id: plant
                text: "Plant"
                on_release:
                    root.plant_request()
                    root.start_connection()

        Label:
            id: label
            text: root.out
